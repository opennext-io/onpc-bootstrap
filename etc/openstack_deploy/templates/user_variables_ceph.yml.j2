#  mon_host = 10.16.5.40,10.16.5.41,10.16.5.42
#  # optionally, you can use this construct to avoid defining this list twice:
{%- raw %}
#  # mon_host = {{ ceph-mon | join(',') }}
{% endraw %}
#  auth_cluster_required = cephx
